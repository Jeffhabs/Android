<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <TextView
        android:id="@+id/sw_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sw_name"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"/>


        <TextView
            android:id="@+id/sw_hair_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sw_hair_color"
            android:padding="4dp"
            />

        <TextView
            android:id="@+id/sw_skin_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="@string/sw_skin_color"
            android:padding="4dp"
            />
        <TextView
            android:id="@+id/sw_eye_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sw_eye_color"
            android:layout_below="@+id/sw_skin_color"
            android:padding="4dp"
            />



</LinearLayout>